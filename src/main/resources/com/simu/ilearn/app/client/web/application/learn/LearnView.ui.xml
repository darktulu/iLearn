<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:s='urn:import:com.simu.ilearn.app.client.web.application.learn.ui'>
    <ui:style>
        .body {
            background-color: #f5f5f5;
        }

        .wrapper {
            margin: auto;
            max-width: 1000px;
            overflow-y: auto;
            overflow-x: auto;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.body}">

        <div class="{style.wrapper}">
            <!-- TODO : to be placed in a widget -->
            <s:LearnEditor ui:field="learnEditor"/>
            <g:Button ui:field="submit"/>
        </div>

        <div class="{style.wrapper}">
            <g:HTMLPanel ui:field="tablePanel"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
