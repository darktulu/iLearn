<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .title {
            text-shadow: 0 0 1px rgba(136, 136, 136, 0.3);
        }

        .title:hover {
            cursor: pointer;
            color: #646464;
            text-shadow: 0 0 5px rgba(136, 136, 136, 0.4);
        }

        .summary {
            margin-top: 20px;
            text-shadow: 0 0 1px rgba(136, 136, 136, 0.3);
        }

        .summaryView {
            padding: 0 15px 15px;
        }

        .sub {
            color: dimgrey;
            font-size: 0.8em;
            text-shadow: 0 0 1px rgba(136, 136, 136, 0.3);
            background-color: whitesmoke;
            border-top: solid 1px #ccc;
            padding: 10px 0 5px 10px;
        }

        .inline {
            display: inline;
        }

        .wrapper {
            display: inline-block;
            background-color: white;
            margin: 10px;
            width: 300px;
            height: 350px;
            border: #ccc solid 1px;
        }

        .wrapper:hover {
            border: #428dcc solid 1px;
        }
    </ui:style>
    <g:SimpleLayoutPanel addStyleNames="{style.wrapper}">
        <g:DockLayoutPanel unit='PX'>
            <g:center>
                <g:HTMLPanel addStyleNames="{style.summaryView}">
                    <h3>
                        <g:Label ui:field="title" addStyleNames="{style.title}"/>
                    </h3>
                    <g:HTMLPanel addStyleNames="{style.summary}">
                        <g:Label ui:field="summary"/>
                    </g:HTMLPanel>
                </g:HTMLPanel>
            </g:center>
            <g:south size="40">
                <g:HTMLPanel addStyleNames="{style.sub}">
                <g:Label ui:field="created" addStyleNames="{style.inline}"/>
                </g:HTMLPanel>
            </g:south>
        </g:DockLayoutPanel>
    </g:SimpleLayoutPanel>
</ui:UiBinder>
