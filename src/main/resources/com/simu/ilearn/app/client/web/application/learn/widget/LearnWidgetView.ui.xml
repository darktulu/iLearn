<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .title {
            text-shadow: 0 0 1px rgba(136, 136, 136, 0.3);
        }

        .title:hover {
            cursor: pointer;
            color: #646464;
            text-shadow: 0 0 5px rgba(136, 136, 136, 0.7);
        }

        .summary {
            margin-top: 20px;
            text-shadow: 0 0 1px rgba(136, 136, 136, 0.3);
        }

        .summaryView {
            display: inline-block;
            background-color: white;
            margin: 10px;
            width: 300px;
            height: 200px;
            border : #ccc solid 1px;
        }

        .summaryView:hover {
            height: 200px;
            background-color: rgba(255, 255, 255, 0.5);
        }

        .sub {
            color: dimgrey;
            font-size: 0.8em;
            text-shadow: 0 0 1px rgba(136, 136, 136, 0.3);
        }

        .inline {
            display: inline;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.summaryView}">
        <h2>
            <g:Label ui:field="title" addStyleNames="{style.title}"/>
        </h2>
        <div class="{style.sub}">
            <p>
                <g:Label ui:field="created" addStyleNames="{style.inline}"/>
            </p>
            <p>
                Nombre de vues :
                <g:Label ui:field="views" addStyleNames="{style.inline}"/>
            </p>
        </div>
        <div style="{style.summary}">
            <g:Label ui:field="summary"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
